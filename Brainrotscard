<script>
  // ---------- Data (20 cards with your rarities) ----------
  const CARDS = [
    // Legendary (gold frame images)
    {name:"BOMBARDIRO CROCODILO", rarity:"Legendary", atk:180, def:175, note:"Airstrike legend."},
    {name:"TRALALERO", rarity:"Legendary", atk:170, def:160, note:"Three-leg dash."},
    {name:"TUN TUN TUN ZAHUR", rarity:"Legendary", atk:180, def:150, note:"Ancient club swing."},

    // Epic (purple frame images)
    {name:"BONEKA AMBALABU", rarity:"Epic", atk:80, def:85, note:"Rubber bounce."},
    {name:"CAPUCHINO ASESINO", rarity:"Epic", atk:70, def:80, note:"Double slash."},
    {name:"BALLERINA CAPPUCCINA", rarity:"Epic", atk:70, def:65, note:"Creamy spin."},
    {name:"FRIGO CAMELO", rarity:"Epic", atk:72, def:82, note:"Desert chill gust."},
    {name:"ZIBRA ZUBRA ZEBRALINI", rarity:"Epic", atk:75, def:85, note:"Watermelon charge."},

    // Rare (blue frame images)
    {name:"VACA SATURNO SATURNITA", rarity:"Rare", atk:76, def:74, note:"Planet hop."},
    {name:"CACTO HIPOPOTAMO", rarity:"Rare", atk:77, def:78, note:"Poison thorns."},
    {name:"TRULIMERO TRULICHINA", rarity:"Rare", atk:72, def:77, note:"Tropical strike."},
    {name:"LIRILI LARILA", rarity:"Rare", atk:70, def:74, note:"Cactus morph."},
    {name:"BOMBOMBINI GUSINI", rarity:"Rare", atk:78, def:72, note:"Goose explosion."},
    {name:"BRR BRR PATAPIM", rarity:"Rare", atk:70, def:70, note:"Giant stomp."},

    // Common (white frame images)
    {name:"JIRAFFA CELESTE", rarity:"Common", atk:61, def:65, note:"Space hop."},
    {name:"MADIN DIN DIN DUN", rarity:"Common", atk:64, def:65, note:"Acid juice shot."},
    {name:"ESPRESSONA SIGNORA", rarity:"Common", atk:57, def:52, note:"Stare freeze."},
    {name:"FRULI FRULA", rarity:"Common", atk:58, def:52, note:"Sandstorm flap."},
    {name:"TRIPI TROPI", rarity:"Common", atk:58, def:60, note:"Belly quake."},
    {name:"CHIMPANZINI BANANINI", rarity:"Common", atk:58, def:60, note:"Banana blast."},
  ];

  // ---------- Helper: on-the-fly SVG placeholder as "image" ----------
  function svgPlaceholder(title, rarity){
    const grad = {
      Legendary:['#3b2a00','#d4ad31'],
      Epic:['#2a1146','#a462ff'],
      Rare:['#032a46','#3bb6ff'],
      Common:['#1a2333','#cfd8e3']
    }[rarity] || ['#121826','#8a7dff'];

    const label = rarity.toUpperCase();
    const svg =
`<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1200 900'>
  <defs>
    <linearGradient id='g' x1='0' x2='1' y1='0' y2='1'>
      <stop offset='0' stop-color='${grad[0]}'/>
      <stop offset='1' stop-color='${grad[1]}'/>
    </linearGradient>
  </defs>
  <rect width='1200' height='900' fill='url(#g)'/>
  <text x='50%' y='46%' font-size='88' font-family='Arial, Helvetica, sans-serif'
        fill='white' text-anchor='middle' font-weight='800' opacity='0.95'>
    ${title.replace(/&/g,'&amp;')}
  </text>
  <text x='50%' y='80%' font-size='44' font-family='Arial, Helvetica, sans-serif'
        fill='rgba(255,255,255,.9)' text-anchor='middle' font-weight='700'>
    ${label}
  </text>
</svg>`;
    return 'data:image/svg+xml;utf8,'+encodeURIComponent(svg);
  }

  // ---------- Render ----------
  const grid = document.getElementById('grid');
  function render(filter='all'){
    grid.innerHTML = '';
    CARDS.filter(c => filter==='all' || c.rarity===filter).forEach(c=>{
      const el = document.createElement('article');
      el.className='card';
      const badgeClass = c.rarity.toLowerCase();
      const img = svgPlaceholder(c.name, c.rarity);
      el.innerHTML = `
        <img class="thumb" src="${img}" alt="${c.name}"/>
        <div class="pad">
          <div class="name">${c.name}</div>
          <span class="badge ${badgeClass}">${c.rarity}</span>
          <div class="stats">
            <div class="pill">ATK: ${c.atk}</div>
            <div class="pill">DEF: ${c.def}</div>
          </div>
          <div class="muted" style="margin-top:8px">${c.note}</div>
        </div>`;
      grid.appendChild(el);
    });
  }
  render();

  // Filters
  document.querySelectorAll('.chip').forEach(ch=>{
    ch.addEventListener('click', ()=>{
      document.querySelectorAll('.chip').forEach(x=>x.classList.remove('active'));
      ch.classList.add('active');
      render(ch.dataset.filter);
    });
  });

  // Footer year
  document.getElementById('y').textContent = new Date().getFullYear();
</script>
